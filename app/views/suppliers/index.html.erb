<div class="supplier_filter search">
	<ul class="search_bar">
		<li>Showing all suppliers in </li>
		<li class="menu"><%= link_to "  Any City", "#" %></li>
	</ul>
</div>

<div id="suppliers_wrapper">

	<ul id="listings">

	<% @suppliers.each do |supplier| %>
	<li class="<%= cycle('even', 'odd') %>">
		<%= link_to supplier do %>
			<span>
				<div class="type"><%= supplier.specialty.name %></div>
	    		<div class="role">
					<h3><%= supplier.name %></h3>
					 <span><%= truncate(supplier.description, :length => 40) %></span>
				</div>
				<span class="location">

					<%= supplier.city.city_name %>, <%= supplier.city.state %>
				</span>
				<div class="meta"><%= supplier.created_at.to_date.to_s(:short) %></div>
			</span>
		<% end %>
	</li>
	<% end %>
	
	</ul>

</div>

<br />

<%= link_to 'New Supplier', new_supplier_path %>
